<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %>
</head>
<body>
<%- include('partials/navbar') %>
<div class="container mt-5">
    <h2 class="text-center">Edit Project</h2>
    <form action="/portfolio/edit/<%= project.id %>" method="POST">
        <div class="mb-3">
            <label for="title" class="form-label">Project Title</label>
            <input type="text" id="title" name="title" class="form-control" value="<%= project.title %>" required>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Project Description</label>
            <textarea id="description" name="description" class="form-control" rows="3" required><%= project.description %></textarea>
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Image URL</label>
            <input type="text" id="image" name="image" class="form-control" value="<%= project.image %>">
        </div>
        <button type="submit" class="btn btn-success">Update Project</button>
    </form>
</div>
</body>
</html>
